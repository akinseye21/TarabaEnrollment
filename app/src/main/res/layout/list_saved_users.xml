<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:background="@drawable/card_back"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginBottom="10dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/head_school"
                android:layout_marginRight="10dp"
                android:id="@+id/userimg"
                app:civ_border_color="#000"
                app:civ_border_width="0.1dp"/>
            <View
                android:layout_width="0.2dp"
                android:layout_height="match_parent"
                android:background="#000"
                android:layout_marginRight="10dp"/>
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Surname Firstname"
                    android:textSize="15dp"
                    android:id="@+id/name"
                    android:maxLength="28"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#000"
                    android:fontFamily="@font/montserratbold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2000-12-04"
                    android:textSize="12dp"
                    android:id="@+id/dob"
                    android:textColor="#000"
                    android:fontFamily="@font/montserratitalic"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRS123456"
                    android:textSize="12dp"
                    android:id="@+id/tesisNumber"
                    android:textColor="#000"
                    android:fontFamily="@font/montserratregular"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Religion"
                    android:textSize="15dp"
                    android:id="@+id/religion"
                    android:textColor="#000"
                    android:maxLength="12"
                    android:fontFamily="@font/montserratbold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textSize="12dp"
                    android:id="@+id/gender"
                    android:textColor="#000"
                    android:fontFamily="@font/montserratitalic"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="School name jdujdhfnwhidbfhwdbhwbhbwjnfjenjwdbjwb"
                    android:textSize="12dp"
                    android:id="@+id/schoolname"
                    android:textColor="#000"
                    android:maxLength="28"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserratregular"/>


            </LinearLayout>

        </LinearLayout>

        <ProgressBar
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:id="@+id/progressBar"
            android:visibility="gone"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/check"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:visibility="gone"
            android:id="@+id/check"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/button_green"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="Sync"
            android:id="@+id/sync"
            android:textColor="#fff"
            android:textSize="15dp"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/sync"
            android:drawableTint="#fff"
            android:paddingLeft="20dp"
            android:paddingRight="30dp"
            android:fontFamily="@font/montserratbold"/>

    </RelativeLayout>


</LinearLayout>